<?xml version="1.0" encoding="UTF-8"?>
<!-- <!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd"> -->

<suite name="Openkart Regression Suite" verbose="10"
	parallel="tests" thread-count="4">

	<test name="LoginTest">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.qa.openkart.test.LoginPageTest" />
		</classes>
	</test>

	<test name="AccountTest">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.openkart.test.AccountPageTest" />
		</classes>
	</test>

	<test name="SearchTest">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.qa.openkart.test.SearchTest" />
		</classes>
	</test>

	<test name="ProductInfoTest">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.qa.openkart.test.ProductInfoTest" />
		</classes>
	</test>


</suite>